<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="800dp"
    android:background="@drawable/bg_bottom_sheet"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/handle_bar"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama :"
            style="@style/RincianLabel" />

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RincianValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu :"
            style="@style/RincianLabel" />

        <TextView
            android:id="@+id/txtWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RincianValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimensi :"
            style="@style/RincianLabel" />

        <TextView
            android:id="@+id/txtDimensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RincianValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukuran :"
            style="@style/RincianLabel" />

        <TextView
            android:id="@+id/txtUkuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RincianValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi :"
            style="@style/RincianLabel" />

        <TextView
            android:id="@+id/txtLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RincianValue" />
    </LinearLayout>
</ScrollView>
