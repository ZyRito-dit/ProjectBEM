<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_divisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Divisi"
            android:fontFamily="@font/acme"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_masalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Permasalahan"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_divisi"
            app:layout_constraintTop_toBottomOf="@+id/tv_divisi" />

        <TextView
            android:id="@+id/tv_solusi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Solusi"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_masalah"
            app:layout_constraintTop_toBottomOf="@+id/tv_masalah"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Keterangan"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_solusi"
            app:layout_constraintTop_toBottomOf="@+id/tv_solusi"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_laksana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Terlaksana"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_keterangan"
            app:layout_constraintTop_toBottomOf="@+id/tv_keterangan"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>